<div class="sticky top-0 z-10 bg-black">
    <nav class="flex justify-between items-center h-20 p-4">
        <div class="flex items-center gap-1 relative">
          <%= image_tag 'logo.png', class: 'w-5 h-8' %>
          <div class="relative">
            <p class="text-xl font-bold">SPOTYFEST</p>
            <span class="absolute bottom-0 right-0 transform translate-x-2 translate-y-3 text-xs font-semibold bg-spotify-green px-1 py-0.2 rounded">BETA</span>
          </div>
        </div>


        <% if current_user %>
            <%= link_to account_settings_path, class: "flex justify-end gap-2 items-center w-full max-w-xs md:max-w-sm lg:max-w-md" do %>
            <%= image_tag current_user.image, class: "object-cover h-10 w-10 rounded-full", alt: "User Profile Image" %>

            <span class="text-md max-w-36 md:max-w-fit md:text-lg lg:text-xl font-bold truncate" title="<%= current_user.username %>">
                <%= current_user.username %>
            </span>
            <% end %>
        <% end %>
    </nav>
</div>
