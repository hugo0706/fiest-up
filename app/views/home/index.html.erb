<div class="bg-black text-gray-200 h-[100vh]">
    <div data-controller="navbar" data-action="resize@window->navbar#closeOnBigScreen keydown.esc@window->navbar#close" class="sticky top-0 z-10 bg-black">
        <nav class="flex justify-between items-center h-20 p-4 ">
            <div class="p-4 flex items-center gap-2">
                <%= image_tag 'spotify-icon.svg', class: 'w-8 h-8' %>
                <p class="text-xl font-bold">SPOTIFEST</p>
            </div>
            <div class="flex gap-2">
                <div class="p-4">
                    <p class="text-xl font-bold">User</p>
                </div>
                <div role="button" data-navbar-target="dropdownButton" data-action="click->navbar#toggle" class="md:hidden p-4">
                    <p class="text-xl font-bold">Dropdown</p>
                </div>
            </div>
        </nav>
        <nav data-navbar-target="content" class="absolute hidden w-full h-80 overflow-y-auto bg-spotify-gray-clear">
            <% (1..100).each do |i| %>
            <p> <%= i %> </p>
            <% end %>
        </nav>
    </div>
    <div class="flex flex-col gap-3">
        <div class="flex gap-3">
            <nav class="hidden md:flex flex-col justify-between text-center p-4 sticky bottom-3 h-[calc(100vh-92px)] w-1/6 rounded-2xl bg-spotify-gray-secondary">
                <div class="">
                    toip
                </div>
                <div class="">
                    bottom
                </div>
            </nav>
            <main class="flex-grow w-5/6 sticky top-20 h-[calc(100vh-146px)] md:bottom-3 md:h-[calc(100vh-92px)] overflow-y-auto p-4 rounded-2xl bg-spotify-gray-secondary">
                <% (1..100).each do |i| %>
                <p> <%= i %> </p>
                <% end %>
                <%= yield %>
            </main>
        </div>
        <%= render 'layouts/footer_nav' %>
    </div>
</div>