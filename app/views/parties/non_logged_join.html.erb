<div class="flex flex-col justify-center items-center gap-4 h-full">
    <h1 class="text-3xl font-bold text-gray-200">New here?</h1>
    <div class="flex flex-col justify-center items-center gap-4  p-4 rounded-2xl bg-spotify-gray-clear">
        <div data-controller="join-party" data-join-party-party-code-value="<%= @code %>" data-join-party-party-show-url-value="<%= show_party_path %>" data-join-party-temporal-session-create-value="<%= temporal_sessions_path %>" class="flex flex-col justify-center items-center bg-spotify-gray-dark rounded-2xl w-80 h-60 gap-3">
            <h1 class="font-semibold text-2xl text-center">Join without account</h1>
            <input maxlength="13" placeholder="Name" data-join-party-target="name" class="bg-black text-gray-200 text-center text-3xl max-w-48 border border-gray-400 hover:border-black focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent font-bold py-3 px-5 rounded">
            <p data-join-party-target="nameError" class="hidden text-xs font font-semibold text-red-500"></p>
            <button data-action="click->join-party#non_oauth_join" class="py-2 px-5 rounded font-semibold text-xl text-center bg-spotify-green hover:bg-green-700">Join</button>
        </div>
        <%= render 'shared/login_with_spotify'%>
    </div>
</div>
