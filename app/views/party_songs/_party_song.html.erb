<li id="<%="party_song_#{party_song_id}"%>" class="flex items-center gap-1 justify-between h-14 hover:bg-spotify-gray-clear">
    <div id="<%= song.spotify_song_id %>" class="flex items-center gap-2 flex-grow min-w-0">
        <img src="<%= song.image %>" class="w-16 rounded-sm lg:rounded">
        <div class="flex flex-col gap-1 my-2 overflow-hidden">
          <div class="overflow-hidden text-ellipsis whitespace-nowrap">
            <p class="font-semibold text-base truncate"><%= song.name %></p>
              <p class="font-semibold text-gray-500 text-xs truncate"><%= song.artists.join(',') %></p>
          </div>
          <%= link_to image_tag('spotify-full-logo.svg', class: 'w-[70px]'), "http://open.spotify.com/track/#{song.spotify_song_id}", target: '_blank', class: 'inline-block' %>
        </div>
    </div>
    <% if false %>
    <div class="flex items-center bg-gray-200 text-black font-extrabold p-2 h-3/5 rounded-xl hover:bg-spotify-gray-clear hover:border-spotify-green hover:text-spotify-green">
    <%= image_tag 'dark-heart-icon.svg', class: 'w-5 h-5' %>
    </div>
    <div class="flex items-center bg-gray-200 text-black font-extrabold p-2 h-3/5 rounded-xl hover:bg-spotify-gray-clear hover:border-spotify-green hover:text-spotify-green">
        <%= image_tag 'dark-trash-icon.svg', class: 'w-5 h-5' %>
    </div>
    <% end %>
</li>
