<div data-controller="create-party">
<%= form_with url: create_party_path, method: :post, class: "relative flex flex-col justify-center bg-spotify-gray-dark items-center rounded-lg w-80 p-4 gap-3" do |form| %>
    <%= form.text_field :name, 
        placeholder: "Name", maxlength: 15, minlength: 1, required: true, 
        class: "bg-black text-gray-200 text-center text-3xl w-full border border-gray-400 hover:border-black focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent font-bold py-3 px-5 rounded", 
        data: { create_party_target: "name" } %>
    <p data-create-party-target="nameError" class="hidden text-xs font font-semibold text-red-500"></p>
    <%= form.submit "Create a party", 
        class: "py-2 w-full rounded font-extrabold text-xl text-center bg-spotify-green hover:bg-green-700", 
        data: { action: 'click->create-party#validate' } %>
<% end %>
</div>